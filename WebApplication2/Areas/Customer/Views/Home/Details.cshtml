@model BulkyBook.Models.ShoppingCart 
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form method="post" class="p-2">
    <input hidden asp-for="Productid" />
        <div class="card  container p-4 ">
            <div class="card-header ml-0  row " style="background-color:#121621">
                <div class="col-6">
                    <h1 class="text-white">@Model.Product.Title</h1>
                </div>
                <div class="col-6 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted">產品編號 : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">建議售價: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-3 bg-secondary border-bottom">
                                    <div>數量</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary border-bottom">
                                    <div>1-50</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary border-bottom">
                                    <div>51-100</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2 mb-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-3 bg-secondary">
                                    <div>售價</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary">
                                    <div>@Model.Product.Price.ToString("c")</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary">
                                    <div>@Model.Product.Price50.ToString("c")</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary">
                                    <div>@Model.Product.Price100.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2 border border-2" style="border-radius: 10px">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h2>數量</h2></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="~/@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <button class="btn btn-success form-control " style="height:50px;" asp-action="Index">回到首頁</button>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" class="btn btn-primary form-control" style="height:50px;">加入購物車</button>
                    </div>
                </div>
            </div>
        </div>
</form>

@{
    ViewData["Title"] = "What's up!!";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-warning">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;Create New Product
            </a>
        </div>
    </div>
<br /><br />
<table  id="tbltable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th><p class="fs-5 text-primary">Title Name</p></th>
            <th><p class="fs-5 text-primary">ISBN Name</p></th>
            <th><p class="fs-5 text-primary">Price Name</p></th>
            <th><p class="fs-5 text-primary">Author Name</p></th>
            <th><p class="fs-5 text-primary">Category Name</p></th>
            @*按鈕*@
            <th><p class="fs-5 text-primary">功能</p></th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>
</div>
@*導入datatable的javescripts程式碼*@
@section Scripts{
    <script src="~/js/product.js"></script>
}
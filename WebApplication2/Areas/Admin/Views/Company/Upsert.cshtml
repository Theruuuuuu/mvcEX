@model BulkyBook.Models.Company
@*上傳檔案必須要multipart/form-data*@
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden/>
	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row" >
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Id==0 ? "Create" : "Update") Company</h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3">
					<lable asp-for="Name">Name</lable>
					<textarea asp-for="Name"  class="form-control" ></textarea>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>	
				<div class="mb-3">
					<lable asp-for="PhoneNumber">PhoneNumber</lable>
					<textarea asp-for="PhoneNumber" class="form-control" ></textarea>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>		
				<div class="mb-3">
					<lable asp-for="StreetAddress">StreetAddress</lable>
					<textarea asp-for="StreetAddress" class="form-control" ></textarea>
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>				
				<div class="mb-3">
					<lable asp-for="City">City</lable>
					<textarea asp-for="City"  class="form-control" ></textarea>
					<span asp-validation-for="City" class="text-danger"></span>
				</div>				
				<div class="mb-3">
					<lable asp-for="State">State</lable>
					<textarea asp-for="State"  class="form-control" ></textarea>
					<span asp-validation-for="State" class="text-danger"></span>
				</div>				
				<div class="mb-3">
					<lable asp-for="PostalCode">PostalCode</lable>
					<textarea asp-for="PostalCode"  class="form-control" ></textarea>
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>				
				<div class="mb-3">
				@if (Model.Id==0)
				{
					@*確認是否有圖片 所以呼叫自訂函式validateInput 來幫助我們驗證是否有圖片*@
					<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
				}
				else
				{
					<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
				}		
				<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back to List
				</a>
				</div>
			</div>
		</div>		
	</div>
	
</form>
@*script標籤-可以直接在裡面寫Javascript *@
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
	
}
@model IEnumerable<Category>
@{
	ViewData["Title"] = "What's up!!";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-warning">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i>&nbsp;Create New Category
			</a>
		</div>
	</div>
<br /><br />
<div>
		選取欄位: <a class="toggle-vis btn btn-primary" data-column="0">Name</a> - <a class="toggle-vis btn btn-primary" data-column="1">Order</a>
	</div>
<table id="example" class="display table table-striped table-bordered dt-responsive nowrap" style="width:100% ">
	<thead>
		<tr>
			<th>
				<p class="fs-5 text-primary">Category Name</p>
			</th>
			<th>
				<p class="fs-5 text-primary">Display Order</p>
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td width="50%">
						@obj.Name
					</td>
					<td width="30%">
						@obj.DisplayOrder
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							@*傳送所在行 "資料的Id" 讓後續處理能夠找到資料*@
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-auto"><i class="bi bi-pencil-fill"></i>Edit                           
							</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-auto" ><i class="bi bi-x-square"></i>Delete                           
							</a>
						</div>
					</td>
				</tr>
			}
	</tbody>
</table>
</div>



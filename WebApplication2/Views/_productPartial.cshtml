@model IEnumerable<BulkyBook.Models.Product>

@foreach(var product in Model){
			<div class="col-6 col-lg-3 col-md-6 p-1 p-md-3 ">				
					<div class="card h-100" >
						<img src="~/@product.ImageUrl" class="card-img-top rounded "/>

						<div class="card-body">
							<div  class="pl-1">
								<p  class="card-title h5 text-primary">@Html.Raw(product.Title)</p>
								<p class="card-title text-info">by <b>@product.Author</b></p>
							</div>
							<div class="pl-1">
								<p>List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
							</div>
							<div class="pl-1">
								<p>As low as:<b>$@product.Price100.ToString("0.00")</b></p>
							</div>
						</div>
						<div>
							<a asp-action="Details" class="btn btn-light form-control" asp-route-productid="@product.id">Details</a>
						</div>
					</div>								
			</div>
		}
